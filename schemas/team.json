{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": ["string", "number"],
      "title": "Team Id",
      "description": "Team id"
    },
    "name": {
      "type": "string",
      "title": "Player Name",
      "description": "Player First Name"
    },
    "shieldUrl": {
      "type": "string",
      "title": "Team shield",
      "description": "Team shield image url"
    }
  }
}
